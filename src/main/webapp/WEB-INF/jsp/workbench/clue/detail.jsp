	<script type="text/javascript">
		//默认情况下取消和保存按钮是隐藏的
		var cancelAndSaveBtnDefault = true;
		jQuery(function($){

			$("#remark").focus(function() {
				if(cancelAndSaveBtnDefault){
					//设置remarkDiv的高度为130px
					$("#remarkDiv").css("height","130px");
					//显示
					$("#cancelAndSaveBtn").show("2000");
					cancelAndSaveBtnDefault = false;
				}
			});

			$("#cancelBtn").click(function() {
				//显示
				$("#cancelAndSaveBtn").hide();
				//设置remarkDiv的高度为130px
				$("#remarkDiv").css("height","90px");
				cancelAndSaveBtnDefault = true;
			});

			$(".remarkDiv").mouseover(function() {
				$(this).children("div").children("div").show();
			});

			$(".remarkDiv").mouseout(function() {
				$(this).children("div").children("div").hide();
			});

			$(".myHref").mouseover(function() {
				$(this).children("span").css("color","red");
			});

			$(".myHref").mouseout(function() {
				$(this).children("span").css("color","#E6E6E6");
			});

			// 函数： 查询当前线索记录所对应的所有记录
			let loadReferTable = function () {
				$.get("/clue/queryReferAct?clueId="+"${clue.id}", function (result) {
					// 将获得对应的市场活动的列表
					// 利用map函数取得其中的id 并保存在全局 关联活动时需要
					window.actIds = $(result).map(function () {
						return this.id;
					})

					// 动态加载活动记录
					// 每次加载先清空
					$("#activity_table_body").html("");
					$(result).each(function () {
						// push join也可
						$("#activity_table_body").append(
						'<tr>\
							<td>'+this.name+'</td>\
							<td>'+this.startdate+'</td>\
							<td>'+this.enddate+'</td>\
							<td>'+this.user.name+'</td>\
							<td><a clueId="'+'${clue.id}'+'" actId="'+this.id+'" href="javascript:void(0);"  style="text-decoration: none;"><span class="glyphicon glyphicon-remove"></span>解除关联</a></td>\
						</tr>'
						)
					})
				}, "json")
			}

			// 加载完页面刷新
			loadReferTable();

			// 为解除关联超链委派单击事件
			$("#activity_table_body").on("click", "a[clueId][actId]", function () {
				$.confirm("确定接触关联吗？", function () {
					// 删除关系表中的指定行记录
					$.get("/clue/deleteOneRelation", {
						clueId: $(this).attr("clueId"),
						actId: $(this).attr("actId")
					}, function(result) {
						if(result.success){
							$.alert("操作成功");
							loadReferTable();
						}
					})
				}.bind(this))
			})

			// 关联市场活动
			$("#bind_activity_button").click(function () {
				// 在模态框中加载所有的市场活动 回显已经关联的
				$.get("/activity/queryAll", function (result) {
					// 先清除之前已有的
					$("#bind_table").html("");
					$(result).each(function () {
						$("#bind_table").append(
							'<tr>\
								<td><input actId="'+this.id+'" type="checkbox"/></td>\
								<td>'+this.name+'</td>\
								<td>'+this.startdate+'</td>\
								<td>'+this.enddate+'</td>\
								<td>'+this.user.name+'</td>\
							</tr>'
						)
					})
					// 将已经关联的勾选
					let $chk = $("#bind_table :input[actId]");
					$chk.filter(function () {
						return $.inArray($(this).attr("actId"), window.actIds) > -1
					}).prop("checked", true);
					// 控制全选框
					$chk.click(function () {
						$("#select_all").prop("checked", $chk.filter(":checked").size() === $chk.size() )
					})
				})
			});

			// 模态框中全选框事件
			$("#select_all").click(function () {
				$("#bind_table :input[actId]").prop("checked", this.checked);
			})

			// 关联按钮点击事件
			// 为了方便 添加关系时 先将所有原先的记录删除 再插入选中的
			$("#confirm_bind_button").click(function () {
				// 获得选中的id 转换成数组
				let actIdArr = $(":input[actId]:checked").map(function () {
					return $(this).attr("actId")
				}).get();
				// 请求数据
				let data = {
					clueId: "${clue.id}",
					actIds: actIdArr.join(",")
				};
				$.post("/clue/insertRelation", data, function (result) {
					if (result.success) {
						$.alert("操作成功");
						loadReferTable();
					}
				}, "json" );
			})

			// 转换按钮点击事件
			$("#convert_button").click(function () {
				location = "/clue/convert.html?clueId="+"${clue.id}";
			})


		});
